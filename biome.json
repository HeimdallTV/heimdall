{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"lineWidth": 110
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useBlockStatements": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"nursery": {
				"useImportRestrictions": "off"
			}
		}
	}
}
