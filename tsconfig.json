{
  "compilerOptions": {
    "noErrorTruncation": false,
    "strict": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "lese": ["./components/Lese.tsx"],
      "@/*": ["./*"],
      "@constants": ["./constants/index.ts"],
      "@components/*": ["./components/*"],
      "@extension/*": ["../extension/*"],
      "@libs/*": ["./libs/*"],
      "@std": ["./parser/std/index.ts"],
      "@std/*": ["./parser/std/*"],
      "@views/*": ["./views/*"],
      "@yt": ["./parser/yt/index.ts"],
      "@yt/*": ["./parser/yt/*"]
    }
  },
  "include": ["src", "extension"],
  "exclude": ["node_modules"]
}
